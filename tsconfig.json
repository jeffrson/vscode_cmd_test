{
  "compileOnSave": true,
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "inlineSources": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "removeComments": true,
      "sourceMap": true,
      "strictPropertyInitialization": false,
      "target": "es2017",
      "outDir": "build"
    },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
